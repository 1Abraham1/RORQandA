<article class="mb-3 card" id="answer-<%= answer.id %>">
  <section class="card-header">
    <%# <%= question.user.gravatar % > %>
    <%= answer.user.name %>
  </section>
  <div class="card-body">
    <section class="card-text">
      <small><time datetime="<%= answer.formatted_created_at %>">
        <%= answer.formatted_created_at %>
      </time></small>

      <div class="mt-2 mb-3">
        <%= sanitize answer.body %>
      </div>
    </section>
    <% if current_user.present? %>
    <% if current_user.id == answer.user_id %>
    <div class="btn-group">
      <%= link_to t('global.button.edit_answer'), edit_question_answer_path(question, answer), 
        class: 'btn btn-info btn-sm' %>
      <%= button_to t('global.button.delete'), question_answer_path(question, answer),
      class: 'btn btn-danger btn-sm',
        method: :delete, data: {turbo_confirm: t('global.dialog.you_sure')} %>
    </div>
    <% end %>
    <% end %>
  </div>
</article>